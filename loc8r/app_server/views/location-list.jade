extends layout

include _include/sharedHTMLfunctions

block content
	#banner.page-header
		.row
			.col-lg-6
				h1= pageHeader.title
					small &nbsp;#{pageHeader.strapline}
	.row
		.col-xs-12.col-sm-8
			// NOTE: equals must be sticked to the variable
			.error= message
			.row.list-group
				each location in locations
					.col-xs-12.list-group-item
						h4
							// #{location._id} allow to take _id from document
							//   and append it to the path
							a(href="/location/#{location._id}")= location.name
							small &nbsp;
								+outputRating(location.rating)
							span.badge.pull-right.badge-default= location.distance
						p.address= location.address
						p
							each facility in location.facilities
								span.label.label-warning= facility
								| &nbsp;
		.col-xs-12.col-sm-4
			p.lead= sidebar
